<UserControl x:Class="FancyCandles.CandleInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FancyCandles" 
             d:DataContext="{d:DesignInstance Type=local:CandleChart}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <DockPanel>
                <TextBlock Text="時間" />
                <TextBlock TextAlignment="Right" Text="{Binding SelectedCandle.t, StringFormat=yyyy-MM-dd HH:mm:ss}"/>
            </DockPanel>
            <DockPanel>
                <TextBlock Text="開盤" />
                <TextBlock TextAlignment="Right" Text="{Binding SelectedCandle.O}"/>
            </DockPanel>
            <DockPanel>
                <TextBlock Text="最高" />
                <TextBlock TextAlignment="Right" Text="{Binding SelectedCandle.H}"/>
            </DockPanel>
            <DockPanel>
                <TextBlock Text="最低" />
                <TextBlock TextAlignment="Right" Text="{Binding SelectedCandle.L}"/>
            </DockPanel>
            <DockPanel>
                <TextBlock Text="收盤" />
                <TextBlock TextAlignment="Right" Text="{Binding SelectedCandle.C}"/>
            </DockPanel>
            <DockPanel>
                <TextBlock Text="成交量" />
                <TextBlock TextAlignment="Right" Text="{Binding SelectedCandle.V}"/>
            </DockPanel>
        </StackPanel>
    </Grid>
</UserControl>
